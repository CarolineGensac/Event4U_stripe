<main class= "container">
  <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "form-label text-white mt-4", style: "font-weight: bold;" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "exampleInputEmail1" %>
        <%= content_tag :small, "We'll never share your email with anyone else.", id: "emailHelp", class: "form-text text-muted" %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "form-label text-white mt-4", style: "font-weight: bold;" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "exampleInputPassword1" %>
      </div>
      <div class="form-group">
        <%= f.label :avatar, class: "form-label text-white mt-4", style: "font-weight: bold;" %>
        <%= f.file_field :avatar, class: "form-control" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="form-check">
          <%= f.check_box :remember_me, class: "form-check-input", id: "exampleCheck1" %>
          <%= f.label :remember_me, class: "form-check-label text-white", for: "exampleCheck1" %>
        </div>
      <% end %>
      
      <%= f.submit "Log in", class: "btn btn-dark text-white" %>
    <% end %>
  <%= render "devise/shared/links" %>
</main>
